@bot.message_handler(content_types=['audio'])
def handle_audio(message):
    performer = message.audio.performer or "–ò—Å–ø–æ–ª–Ω–∏—Ç–µ–ª—å"
    title = message.audio.title or "–ù–∞–∑–≤–∞–Ω–∏–µ"
    new_caption = f"{performer} ‚Äî {title}\n\nüéµ –ö–∞–Ω–∞–ª: @—Ç–≤–æ—è_—Å—Å—ã–ª–∫–∞"
    bot.send_audio(message.chat.id, message.audio.file_id, caption=new_caption)

@bot.message_handler(func=lambda message: True)
